{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "..",
  "roots": [
    "<rootDir>/test"
  ],

  "testEnvironment": "node",
  "testRegex": ".*\\.test\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "modulePathIgnorePatterns": ["<rootDir>/test/integration"],
  "moduleNameMapper": {
    "^src/(.*)$": "<rootDir>/src/$1",
    "^test/(.*)$": "<rootDir>/test/$1"
  }
}